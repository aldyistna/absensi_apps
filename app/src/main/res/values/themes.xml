<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppsAbsensi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/login_color</item>
        <item name="colorPrimaryVariant">@color/login_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/login_color</item>
        <item name="colorSecondaryVariant">@color/login_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/catamaran</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="NoBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/login_color</item>
        <item name="colorPrimaryVariant">@color/login_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/login_color</item>
        <item name="colorSecondaryVariant">@color/login_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorControlNormal">#070606</item>
        <item name="android:colorControlActivated">#1E1D1D</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/catamaran</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextProfilePage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextProfilePage.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/login_color</item>
        <item name="android:layout_width">75dp</item>
    </style>

    <style name="TextProfilePage.Colon">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:text">@string/colon</item>
        <item name="android:textColor">@color/login_color</item>
    </style>

    <style name="MyEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>